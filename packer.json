{
    "variables": {
        "aws_access_key_id": "{{env `AWS_ACCESS_KEY_ID`}}",
        "aws_secret_access_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
        "aws_session_token": "{{env `AWS_SESSION_TOKEN`}}",
        "time_zone": "{{env `TIME_ZONE`}}"
    },
    "builders": [{
        "type": "amazon-ebs",
        "access_key": "{{user `aws_access_key_id`}}",
        "secret_key": "{{user `aws_secret_access_key`}}",
        "token": "{{user `aws_session_token`}}",
        "region": "us-east-1",
        "source_ami": "ami-045f1b3f87ed83659",
        "instance_type": "t2.micro",
        "ssh_username": "ec2-user",
        "associate_public_ip_address": "true",
        "ami_name": "docker-production-aws-aravind-ecs-base {{timestamp}}",
        "tags": {
            "Name": "Docker Production AWS (Aravind) ECS Base Image",
            "SourceAMI": "ami-045f1b3f87ed83659",
            "DockerVersion": "18.09.0",
            "ECSAgentVersion": "1.22.0"
        }
    }],
    "post-provisioners": [{
        "type": "manifest",
        "output": "manifest.json",
        "strip_path": true
        }]
    /* ,
    "provisioners": [{
        "type": "shell",
        "script": "scripts/configure-timezone.sh",
        "environment_vars": [
            "TIME_ZONE={{user `time_zone`}}"
        ]
    }, {
        "type": "shell",
        "script": "scripts/install-os-packages.sh"
    }, {
        "type": "shell",
        "script": "scripts/cloud-init-options.sh"
    }, {
        "type": "shell",
        "script": "scripts/cleanup.sh"
    }, {
        "type": "file",
        "script": "files/firstrun.sh",
        "destination": "/home/ec2-user/firstrun.sh"
    }] */
}
